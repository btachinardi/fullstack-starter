{
	"name": "@libs/auth/api",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"description": "Authentication module for NestJS using Better Auth",
	"scripts": {
		"dev": "pnpm build --watch",
		"build": "tsc -b -v"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"./dist/**"
	],
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./*": {
			"import": "./dist/*.js",
			"require": "./dist/*.js"
		}
	},
	"dependencies": {
		"@libs/core/utils": "workspace:*",
		"@nestjs/common": "^11.1.7",
		"@nestjs/core": "^11.1.7",
		"@thallesp/nestjs-better-auth": "^2.1.0",
		"better-auth": "^1.3.29"
	},
	"devDependencies": {
		"@configs/typescript": "workspace:*",
		"@prisma/client": "^6.18.0",
		"@types/node": "^24.9.1",
		"prisma": "^6.18.0",
		"typescript": "5.9.3"
	}
}
