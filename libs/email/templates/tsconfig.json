{
	"extends": "@configs/typescript/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"jsx": "react-jsx",
		"lib": ["ES2022"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
