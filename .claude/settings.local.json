{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(node tools/dist:*)",
      "Bash(pnpm tools:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm format:*)",
      "Bash(pnpm dev:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)",
      "Read(**/tools/logs/**)",
      "Read(**/.claude/**)",
      "Read(**/ai/**)",
      "Bash(pnpm build:tools)"
    ],
    "deny": [
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -f:*)",
      "Bash(git clean -fd:*)",
      "Bash(git branch -D:*)",
      "Bash(pnpm publish:*)",
      "Bash(npm publish:*)"
    ],
    "ask": [
      "Bash(git pull:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git merge:*)",
      "Bash(pnpm remove:*)",
      "Bash(pnpm uninstall:*)",
      "Bash(npm uninstall:*)"
    ]
  },
  "hooks": {
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node tools/dist/hooks/subagent-stop.js"
          }
        ]
      }
    ]
  }
}
