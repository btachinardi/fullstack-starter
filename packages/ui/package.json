{
  "name": "@starter/ui",
  "version": "0.1.0",
  "description": "UI component library for fullstack-starter",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./utils/cn": {
      "types": "./dist/utils/cn.d.ts",
      "import": "./dist/utils/cn.js",
      "require": "./dist/utils/cn.cjs"
    },
    "./button": {
      "types": "./dist/components/button.d.ts",
      "import": "./dist/components/button.js",
      "require": "./dist/components/button.cjs"
    },
    "./card": {
      "types": "./dist/components/card.d.ts",
      "import": "./dist/components/card.js",
      "require": "./dist/components/card.cjs"
    },
    "./table": {
      "types": "./dist/components/table.d.ts",
      "import": "./dist/components/table.js",
      "require": "./dist/components/table.cjs"
    },
    "./input": {
      "types": "./dist/components/input.d.ts",
      "import": "./dist/components/input.js",
      "require": "./dist/components/input.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/utils/cn.ts src/components/button.tsx src/components/card.tsx src/components/table.tsx src/components/input.tsx --dts --format esm,cjs --clean",
    "dev": "tsup src/index.ts src/utils/cn.ts src/components/button.tsx src/components/card.tsx src/components/table.tsx src/components/input.tsx --dts --format esm,cjs --watch",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@starter/utils": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@starter/typescript": "workspace:*",
    "@types/react": "^18.3.18",
    "react": "^18.3.1",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
