{
  "name": "@starter/utils",
  "version": "0.1.0",
  "description": "Web utilities for fullstack-starter",
  "type": "commonjs",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./errors": {
      "types": "./src/errors.d.ts",
      "default": "./src/errors.js"
    },
    "./logger": {
      "types": "./src/logger.d.ts",
      "default": "./src/logger.js"
    },
    "./format": {
      "types": "./src/format.d.ts",
      "default": "./src/format.js"
    }
  },
  "typesVersions": {
    "*": {
      "errors": ["./src/errors.d.ts"],
      "logger": ["./src/logger.d.ts"],
      "format": ["./src/format.d.ts"]
    }
  },
  "files": ["src", "dist"],
  "scripts": {
    "build": "tsc",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@starter/typescript": "workspace:*",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
