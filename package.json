{
  "name": "@fullstack-starter/root",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.18.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "setup": "node scripts/setup.mjs",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@fullstack-starter/web",
    "dev:api": "turbo run dev --filter=@fullstack-starter/api",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --  --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yaml,yml}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "smoke": "turbo run smoke",
    "ci:bootstrap": "node scripts/setup.mjs --check",
    "ci:local": "bash scripts/ci-local.sh",
    "ci:quick": "bash scripts/ci-quick.sh",
    "tools": "pnpm --filter @fullstack-starter/tools tools",
    "web:scaffold": "node scripts/scaffold-feature.mjs",
    "web:route": "node scripts/scaffold-route.mjs",
    "api:migrate": "turbo run migrate --filter=@fullstack-starter/api",
    "api:seed": "turbo run seed --filter=@fullstack-starter/api",
    "api:db:studio": "turbo run db:studio --filter=@fullstack-starter/api",
    "api:queue": "turbo run queue --filter=@fullstack-starter/api",
    "api:openapi": "turbo run openapi --filter=@fullstack-starter/api",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter='./packages/*' && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "dotenv": "^16.4.7",
    "dotenv-flow": "^4.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "zod": "^3.24.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,mdx,css,yaml,yml}": [
      "prettier --write"
    ]
  }
}
