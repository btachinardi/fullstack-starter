// ============================================================================
// Test Auth Library Schema
// ============================================================================
// Test fixture for authentication models with no dependencies

generator client {
	provider        = "prisma-client-js"
	output          = "../generated/prisma"
	
}

datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
	schemas  = ["auth"]
}

// ============================================================================
// Auth Models
// ============================================================================

model User {
	id            String    @id @default(cuid())
	email         String    @unique
	emailVerified Boolean   @default(false)
	name          String?
	createdAt     DateTime  @default(now())
	updatedAt     DateTime  @updatedAt
	sessions      Session[]

	@@map("users")
	@@schema("auth")
}

model Session {
	id        String   @id @default(cuid())
	token     String   @unique
	expiresAt DateTime
	userId    String
	user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
	createdAt DateTime @default(now())

	@@map("sessions")
	@@schema("auth")
}
