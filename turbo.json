{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.base.json",
    ".env",
    ".env.local"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "out/**"
      ],
      "env": [
        "VITE_API_URL",
        "VITE_AUTH_URL",
        "DATABASE_URL",
        "REDIS_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [
        "coverage/**"
      ],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "smoke": {
      "dependsOn": ["build"],
      "cache": false
    },
    "migrate": {
      "cache": false
    },
    "seed": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "queue": {
      "cache": false,
      "persistent": true
    },
    "openapi": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/openapi.json"
      ]
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
